{
    "manifest_version": 3,
    "name": "Webpage Screenshot Tool",
    "version": "1.0",
    "description": "Take a screenshot of the current webpage.",
    "permissions": ["scripting", "activeTab", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"]
  }  